<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.networkv6.web.goods.GoodsEdit"
        datasource="goodsDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.networkv6.web.goods">
    <dsContext>
        <datasource id="goodsDs"
                    class="com.company.networkv6.entity.Goods"
                    view="goods-with-maker"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions" spacing="true">
        <fieldGroup id="fieldGroup" datasource="goodsDs">
            <column width="250px">
                <field property="name"/>
                <field property="maker"/>
                <field property="cost"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
